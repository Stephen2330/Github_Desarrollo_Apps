@model Ventas_Vehiculos.Models.TBL_Factura

@{
	ViewBag.Title = "Detalles factura";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="titulo_details">@ViewBag.Title</h2>

<div>
	<hr />
