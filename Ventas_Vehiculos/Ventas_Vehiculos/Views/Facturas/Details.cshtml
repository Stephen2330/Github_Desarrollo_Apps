		<dt class="titulo_details_tabla">
			Número de vehículo
		</dt>
		<dd>
			
				@Html.DisplayFor(model => model.TBL_Vehiculo.TN_IdVehiculo)
			
		</dd>


		 <dt class="titulo_details_tabla">
			Cédula de cliente
		</dt>
		<dd>
			
				@Html.DisplayFor(model => model.TBL_Usuario.TN_IdUsuario)
			
		</dd>


		<dt class="titulo_details_tabla">
			Marca
		</dt>
		<dd>
			
				@Html.DisplayFor(model => model.TBL_Marca.TC_Descripcion)
			
		</dd>


		<dt class="titulo_details_tabla">
			Modelo
		</dt>
		<dd>
			
				@Html.DisplayFor(model => model.TBL_Modelo.TC_Descripcion)
			
		</dd>


		<dt class="titulo_details_tabla">
			Capacidad
		</dt>
		<dd>
			
				@Html.DisplayFor(model => model.TBL_Capacidad.TC_Descripcion)
			
