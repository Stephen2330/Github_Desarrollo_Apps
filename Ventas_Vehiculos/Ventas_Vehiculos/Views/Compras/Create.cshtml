@model Ventas_Vehiculos.Models.TBL_Compra

@{
	ViewBag.Title = "Nueva compra";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />

<h2 class="titulo_create">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal  letra_tabla letra_form">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group letra_search">
			@Html.LabelFor(model => model.TN_IdVehiculo, "Número del vehículo", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("TN_IdVehiculo", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.TN_IdVehiculo, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group letra_search">
			@Html.LabelFor(model => model.TN_Cantidad, "Cantidad comprada", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.TN_Cantidad, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder="Escribe cantidad" } })
				@Html.ValidationMessageFor(model => model.TN_Cantidad, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group letra_search">
			@Html.LabelFor(model => model.TN_IdMarca, "Marca", htmlAttributes: new { @class = "control-label col-md-2" })
