@model Ventas_Vehiculos.Models.TBL_Compra

@{
    ViewBag.Title = "Detalles compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="titulo_details">@ViewBag.Title</h2>

<div>
	<hr />
	<dl class="dl-horizontal letra_search letra_tabla">

		<dt class="titulo_details_tabla">
			Número del vehículo
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Vehiculo.TN_IdVehiculo)
			
		</dd>

		<dt class="titulo_details_tabla">
			Cantidad comprada
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TN_Cantidad)
			
		</dd>

		<dt class="titulo_details_tabla">
			Marca
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Marca.TC_Descripcion)
			
		</dd>

		<dt class="titulo_details_tabla">
			Modelo
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Modelo.TC_Descripcion)
			
		</dd>

		<dt class="titulo_details_tabla">
			Capacidad
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Capacidad.TC_Descripcion)
			
		</dd>

		<dt class="titulo_details_tabla">
			Color
		</dt>
		<dd>
			
				@Html.DisplayFor(model => model.TBL_Color.TC_Descripcion)
			
		</dd>
		<dt class="titulo_details_tabla">
			Año
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Anno.TC_Descripcion)
			
		</dd>

		<dt class="titulo_details_tabla">
			Motor
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Motor.TC_Descripcion)
			
		</dd>



		<dt class="titulo_details_tabla">
			Diseño del vehículo
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Disenno.TC_Descripcion)
			
		</dd>


		<dt class="titulo_details_tabla">
			Cédula de cliente
		</dt>

		<dd>
			
				@Html.DisplayFor(model => model.TBL_Usuario.TN_IdUsuario)
			
		</dd>



	</dl>
</div>
<p>
	<a class="btn btn-secondary editar btn-separator" href="@Url.Action("Edit","Compras",  new { id = Model.TN_IdCompra } )">
		<i class="fa-solid fa-pen-to-square">

		</i>
		
	</a>

	<a class="btn btn-secondary estilo_boton_lista btn-separator" href="@Url.Action("Index", "Compras")">
		<i class="fa fa-undo"></i>
		
	</a>
</p>
