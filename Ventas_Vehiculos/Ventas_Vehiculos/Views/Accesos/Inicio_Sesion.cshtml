
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/Content/Accesos.css" rel="stylesheet" />

<head>
	<meta name="viewport" content="width=device-width" />
	<title>Inicio sesión</title>
</head>

<body class="inicio_sesion ">
	<br />
	<br />
	<div class="container">
		<div class="wrapper" >
			<form  action="@Url.Action("Inicio_Sesion", "Accesos")" method="post" name="Login_Form" class=" letra_form fondo_form form-signin">
				<h2 class="form-signin-heading">Bienvenido a</h2>
				<h2 class="form-signin-heading"> URBAN RIDE</h2>
				<h2 class="form-signin-heading">Por favor inicie sesión</h2>
				<br>
				<input type="text" class="form-control" name="TC_Correo" placeholder="Ingrese correo" required autofocus="" />
				<input type="password" class="form-control" name="TC_Clave" placeholder="Ingrese contraseña" required />

				<button style="margin-top:10px;background-color:black;color:white;text-decoration:none" class="btn btn-lg  btn-block" name="Submit" value="Login" type="Submit">Iniciar sesión</button>
				<a href="@Url.Action("Registro", "Accesos")" class="btn btn-lg  btn-block" style="background-color:black;color:white;text-decoration:none">Registro</a>
			</form>
		</div>
	</div>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</body>
</html>
