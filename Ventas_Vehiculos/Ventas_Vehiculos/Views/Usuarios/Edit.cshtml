@model Ventas_Vehiculos.Models.TBL_Usuario

@{
	ViewBag.Title = "Actualizando usuario";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="titulo_edit">@ViewBag.Title</h2>


