	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body class="fondo_inicio letra_layout">
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<img src="~/Content/img/Logo 1.png" width="50px" />
				@Html.ActionLink("URBAN RIDE", "Index", "Home_Cliente", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse letra_layout">
				<ul class="nav navbar-nav">


					<li>@Html.ActionLink("Vehículos", "Index", "Vehiculo_Cliente")</li>
					<li>@Html.ActionLink("Estadísticas", "Index", "Estadisticas_Cliente", new { area = "" }, new { @class = "nav-link" })</li>

					<li>@Html.ActionLink("Cerrar sesión", "Cerrar_Sesion", "Home_Cliente", new { area = "" }, new { @class = "nav-link" })</li>

				</ul>
			</div>
		</div>
	</div>
	<div class="container body-content letra_layout">
		@RenderBody()
		<hr />
		<footer class="footer">
			<p style="color:black"><b>&copy; @DateTime.Now.Year - URBAN RIDE</b></p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
	<script src="https://kit.fontawesome.com/55a6069fd5.js" crossorigin="anonymous"></script>

</body>
</html>
